<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/list_text" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="-10dp"
            android:rotation="-10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sandwich" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Hello"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Foodie"
            android:textColor="@color/main"
            android:textSize="28sp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/textView19" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/light"
            android:text="Which kind of food would you \nlike to cook ."
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />


        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/searchview"
            android:ems="10"
            android:fontFamily="@font/light"
            android:hint="Search Recipe"
            android:inputType="text"
            android:paddingStart="47dp"
            android:textColorHint="@color/main"
            android:letterSpacing="0.1"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toEndOf="@+id/editTextText3"
            app:layout_constraintTop_toTopOf="@+id/editTextText3"
            app:srcCompat="@drawable/settings" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="26dp"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21"

            app:srcCompat="@drawable/search_ic" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Categories"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/editTextText3" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView22">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/salad"
                    style="@style/mystyle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="12dp"
                    android:background="@drawable/category_card_bc"
                    app:srcCompat="@drawable/salad" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/salad"
                    android:layout_alignStart="@id/salad"
                    android:layout_alignEnd="@id/salad"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="-23dp"
                    android:fontFamily="@font/light"
                    android:text="Salad"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/MainDish"
                    style="@style/mystyle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="12dp"
                    android:layout_marginStart="17dp"
                    android:layout_toEndOf="@+id/salad"
                    android:background="@drawable/category_card_bc"
                    app:srcCompat="@drawable/burger" />

                <TextView
                    android:id="@+id/maindish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/MainDish"
                    android:layout_alignStart="@id/MainDish"
                    android:layout_alignEnd="@id/MainDish"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginBottom="-23dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="Main"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/Drinks"
                    style="@style/mystyle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="17dp"
                    android:padding="12dp"
                    android:layout_toEndOf="@+id/MainDish"
                    android:background="@drawable/category_card_bc"
                    app:srcCompat="@drawable/drink" />

                <TextView
                    android:id="@+id/drinkss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Drinks"
                    android:layout_alignStart="@id/Drinks"
                    android:layout_alignEnd="@id/Drinks"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="-23dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="Drinks"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/Desserts"
                    style="@style/mystyle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="17dp"
                    android:padding="12dp"
                    android:layout_toEndOf="@+id/Drinks"
                    android:background="@drawable/category_card_bc"
                    app:srcCompat="@drawable/cupcake" />

                <TextView
                    android:id="@+id/drinksss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Desserts"
                    android:layout_alignStart="@id/Desserts"
                    android:layout_alignEnd="@id/Desserts"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="-23dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="Dessert"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
                <ImageView
                    android:id="@+id/soups"
                    style="@style/mystyle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="12dp"
                    android:layout_marginStart="17dp"
                    android:layout_toEndOf="@+id/Desserts"
                    android:background="@drawable/category_card_bc"
                    app:srcCompat="@drawable/soup" />

                <TextView
                    android:id="@+id/soup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/soups"
                    android:layout_alignStart="@id/soups"
                    android:layout_alignEnd="@id/soups"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="-23dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="Soup"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
                <ImageView
                    android:id="@+id/chips"
                    style="@style/mystyle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="12dp"
                    android:layout_marginStart="17dp"
                    android:layout_toEndOf="@+id/soups"
                    android:background="@drawable/category_card_bc"
                    app:srcCompat="@drawable/french" />

                <TextView
                    android:id="@+id/chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/chips"
                    android:layout_alignStart="@id/chips"
                    android:layout_alignEnd="@id/chips"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="-23dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="Snacks"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </RelativeLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Popular Recipes"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_popular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/popular_rv_item">

        </androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1000dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/poppins"
            android:text="My own recipies"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/mine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_popular" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/create"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rounded"
            app:layout_constraintBottom_toTopOf="@+id/textView25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_popular">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Recipe !"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="1700dp"
            tools:listitem="@layout/my_rv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>